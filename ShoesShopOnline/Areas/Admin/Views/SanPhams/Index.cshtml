@model IEnumerable<ShoesShopOnline.Models.ProductDetail>

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                Tên sản phẩm
            </th>
            <th>
                Ảnh
            </th>
            <th>
                Đơn giá
            </th>
            <th>
                Danh mục
            </th>
            <th>
                Sản phẩm mới
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenSP)
        </td>
        <td>
            @{ 
                string ImagePath = "~/wwwroot/Images/" + item.Anh;
            }
            <img src="@Url.Content(ImagePath)" width="100" class="img-thumbnail"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GiaBan)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaDM)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.New)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id = item.MaSP}) |
            @Html.ActionLink("Xem chi tiết", "Details", new { id = item.MaSP }) |
            @Html.ActionLink("Xóa", "Delete", new { id = item.MaSP})
        </td>
    </tr>
    }
    
    </table>
</body>
</html>
